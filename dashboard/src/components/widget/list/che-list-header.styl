.che-list-header
  margin-top 15px

.che-list-search
  border 1px solid $primary-color
  border-radius 3px
  overflow hidden
  margin 0 5px 15px 40px
  width 175px
  height 35px
  float left

  .move-out
    margin-left 5px
    margin-right 4px

  .search-icon::before
    margin-left 5px
    color $primary-color

  .search-component md-icon
    height 10px
    width 12px

  .search-icon
    min-height  24px

.che-list-header md-item
  border-top 1px solid $list-separator-color
  display inline-block
  width 100%

.che-list-header-content
  width 100%

.che-list-header-content > *
  border-bottom 1px solid $list-separator-color
  margin 0 40px 0 40px

.che-list-header-content *
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
